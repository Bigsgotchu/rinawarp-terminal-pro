# RinaWarp Terminal - Staging Environment Configuration
# Use this configuration to test telemetry endpoints before production

# ===========================================
# APPLICATION CONFIGURATION
# ===========================================
NODE_ENV=staging
APP_VERSION=1.0.6
LOG_LEVEL=info
DEBUG=false

# ===========================================
# TELEMETRY & ANALYTICS - STAGING SETTINGS
# ===========================================

# Core Telemetry Settings (more verbose for testing)
ENABLE_TELEMETRY=true
ENABLE_ANALYTICS=true
TELEMETRY_PRIVACY_MODE=strict
TELEMETRY_BATCH_SIZE=5
TELEMETRY_FLUSH_INTERVAL=10000
SYSTEM_METRICS_INTERVAL=60000

# ===========================================
# SENTRY ERROR TRACKING
# ===========================================
SENTRY_DSN={{SENTRY_DSN}}
SENTRY_ENVIRONMENT=staging
SENTRY_SAMPLE_RATE=1.0
SENTRY_TRACES_SAMPLE_RATE=0.1

# ===========================================
# AZURE APPLICATION INSIGHTS
# ===========================================
APPINSIGHTS_INSTRUMENTATIONKEY={{APPINSIGHTS_INSTRUMENTATIONKEY}}
APPLICATIONINSIGHTS_CONNECTION_STRING={{APPLICATIONINSIGHTS_CONNECTION_STRING}}
APPINSIGHTS_ENDPOINT=https://dc.services.visualstudio.com/v2/track
APPINSIGHTS_SAMPLING_PERCENTAGE=100

# ===========================================
# GOOGLE ANALYTICS 4
# ===========================================
GA_MEASUREMENT_ID=G-G424CV5GGT
GA_TRACKING_ID=G-G424CV5GGT
GA_API_SECRET={{GA_API_SECRET}}

# ===========================================
# CUSTOM TELEMETRY ENDPOINTS
# ===========================================
TELEMETRY_ENDPOINT={{TELEMETRY_ENDPOINT}}
TELEMETRY_API_KEY={{TELEMETRY_API_KEY}}

# Analytics-specific Endpoint
ANALYTICS_ENDPOINT={{ANALYTICS_ENDPOINT}}
ANALYTICS_API_KEY={{ANALYTICS_API_KEY}}

# ===========================================
# LOGGING CONFIGURATION
# ===========================================
LOG_TO_FILE=true
LOG_DIRECTORY=./logs
MAX_LOG_SIZE=50MB
MAX_LOG_FILES=10

# ===========================================
# FEATURE FLAGS
# ===========================================
ENABLE_AI_FEATURES=true
ENABLE_CLOUD_SYNC=false
ENABLE_CRASH_REPORTING=true
ENABLE_AUTO_UPDATES=false
