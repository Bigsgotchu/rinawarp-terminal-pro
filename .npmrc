# NPM Configuration for RinaWarp Terminal
# Ensures proper authentication for private repositories and packages

# Registry configuration for scoped packages
@rinawarp:registry=https://npm.pkg.github.com/
@bigsgotchu:registry=https://npm.pkg.github.com/

# GitHub Packages authentication (commented out for public package installation)
# //npm.pkg.github.com/:_authToken=${NODE_AUTH_TOKEN}

# Default registry for unscoped packages
registry=https://registry.npmjs.org/

# Security and performance settings
audit-level=moderate
fund=false
optional=false
save-exact=true

# Cache settings for CI/CD
cache=/tmp/.npm
prefer-offline=true

# Progress and logging
progress=false
loglevel=warn

# Package-lock settings
package-lock=true
save=true
save-dev=true
