# ===========================================
# RinaWarp Terminal Environment Variables
# ===========================================
# Copy this file to .env and fill in your actual values
# For production, use production values and set NODE_ENV=production

# ===========================================
# APPLICATION CONFIGURATION
# ===========================================

# Environment mode: development, production, test
NODE_ENV=development

# Server port for payment processing and licensing
PORT=3000

# Application version (auto-updated by build process)
APP_VERSION=1.0.6

# ===========================================
# PAYMENT PROCESSING (STRIPE)
# ===========================================
# Get these from your Stripe Dashboard: https://dashboard.stripe.com/
# Test keys start with pk_test_ and sk_test_
# Live keys start with pk_live_ and sk_live_

# Stripe API Keys
STRIPE_PUBLISHABLE_KEY=pk_test_your_publishable_key_here
STRIPE_SECRET_KEY=sk_test_your_secret_key_here

# Stripe Price IDs (create these in your Stripe Dashboard under Products)
STRIPE_PRICE_PERSONAL=price_your_personal_plan_price_id
STRIPE_PRICE_PROFESSIONAL=price_your_professional_plan_price_id
STRIPE_PRICE_TEAM=price_your_team_plan_price_id

# Stripe Webhook Secret (for webhook verification)
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# ===========================================
# AI INTEGRATION (OPTIONAL)
# ===========================================
# Configure AI providers for enhanced terminal features

# OpenAI Configuration
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_MODEL=gpt-3.5-turbo
OPENAI_MAX_TOKENS=150

# Anthropic Claude Configuration
ANTHROPIC_API_KEY=sk-ant-your-anthropic-key-here
ANTHROPIC_MODEL=claude-3-sonnet-20240229

# Local AI (Ollama) Configuration
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=codellama

# ===========================================
# CLOUD SYNC (OPTIONAL)
# ===========================================
# Enable cloud synchronization for settings and history

# GitHub Sync
GITHUB_TOKEN=ghp_your_github_personal_access_token
GITHUB_SYNC_REPO=your-username/rinawarp-terminal-sync

# Dropbox Sync
DROPBOX_ACCESS_TOKEN=sl.your_dropbox_access_token
DROPBOX_APP_KEY=your_dropbox_app_key

# Custom Sync Endpoint
CUSTOM_SYNC_URL=https://your-sync-service.com/api
CUSTOM_SYNC_TOKEN=your_custom_sync_token

# ===========================================
# ANALYTICS & MONITORING (OPTIONAL)
# ===========================================

# Google Analytics
GA_TRACKING_ID=G-XXXXXXXXXX
GA_MEASUREMENT_ID=G-XXXXXXXXXX

# Sentry Error Reporting
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
SENTRY_ENVIRONMENT=development

# Application Insights
APPINSIGHTS_INSTRUMENTATIONKEY=your-app-insights-key

# ===========================================
# SECURITY CONFIGURATION
# ===========================================

# JWT Secret for authentication
JWT_SECRET=your-super-secret-jwt-key-min-256-bits
JWT_EXPIRES_IN=7d

# Rate limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:8080

# ===========================================
# EMAIL CONFIGURATION (OPTIONAL)
# ===========================================
# For license notifications and support

# SMTP Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# SendGrid (alternative)
SENDGRID_API_KEY=SG.your-sendgrid-api-key
SENDGRID_FROM_EMAIL=noreply@rinawarp-terminal.web.app

# ===========================================
# DATABASE CONFIGURATION (OPTIONAL)
# ===========================================
# For advanced features like user management

# SQLite (default)
DATABASE_URL=sqlite://./data/rinawarp.db

# PostgreSQL (production)
# DATABASE_URL=postgresql://user:password@localhost:5432/rinawarp

# MongoDB (alternative)
# MONGODB_URI=mongodb://localhost:27017/rinawarp

# ===========================================
# FEATURE FLAGS
# ===========================================
# Enable/disable features for gradual rollout

ENABLE_AI_FEATURES=true
ENABLE_CLOUD_SYNC=true
ENABLE_ANALYTICS=false
ENABLE_CRASH_REPORTING=true
ENABLE_AUTO_UPDATES=true
ENABLE_TELEMETRY=false

# ===========================================
# DEVELOPMENT SETTINGS
# ===========================================
# Only used in development mode

# Enable debug logging
DEBUG=rinawarp:*

# Hot reload for development
HOT_RELOAD=true

# Skip SSL verification (development only)
NODE_TLS_REJECT_UNAUTHORIZED=0

# Mock external services
MOCK_PAYMENTS=true
MOCK_AI_SERVICES=false

# ===========================================
# PERFORMANCE TUNING
# ===========================================

# Terminal buffer size (lines)
TERMINAL_BUFFER_SIZE=1000

# Command history limit
COMMAND_HISTORY_LIMIT=1000

# Auto-save interval (milliseconds)
AUTO_SAVE_INTERVAL=30000

# Debounce delay for search/filter (milliseconds)
SEARCH_DEBOUNCE_DELAY=300

# ===========================================
# ADVANCED CONFIGURATION
# ===========================================

# Custom plugin directory
PLUGIN_DIRECTORY=./plugins

# Theme directory
THEME_DIRECTORY=./themes

# User data directory
USER_DATA_DIRECTORY=./user-data

# License server URL
LICENSE_SERVER_URL=https://license.rinawarp-terminal.web.app

# Update server URL
UPDATE_SERVER_URL=https://update.rinawarp-terminal.web.app

# ===========================================
# NOTES
# ===========================================
# 1. Never commit .env files to version control
# 2. Use strong, unique values for all secrets
# 3. Rotate API keys and tokens regularly
# 4. Use environment-specific values (dev/staging/prod)
# 5. Consider using a secret management service for production
# 6. Validate all required variables on startup
