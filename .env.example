# ===========================================
# CLOUD SYNC (OPTIONAL)
# ===========================================
# Enable cloud synchronization for settings and history

# GitHub Sync
GITHUB_TOKEN={{GITHUB_TOKEN}}
GITHUB_SYNC_REPO={{GITHUB_SYNC_REPO}}

# Dropbox Sync
DROPBOX_ACCESS_TOKEN={{DROPBOX_ACCESS_TOKEN}}
DROPBOX_APP_KEY={{DROPBOX_APP_KEY}}

# Custom Sync Endpoint
CUSTOM_SYNC_URL={{CUSTOM_SYNC_URL}}
CUSTOM_SYNC_TOKEN={{CUSTOM_SYNC_TOKEN}}

# ===========================================
# TELEMETRY & ANALYTICS CONFIGURATION
# ===========================================
# Production telemetry for monitoring, analytics, and error tracking
# Configure according to your privacy policy and compliance requirements

# Core Telemetry Settings
ENABLE_TELEMETRY=false
ENABLE_ANALYTICS=false
TELEMETRY_PRIVACY_MODE=strict
TELEMETRY_BATCH_SIZE=10
TELEMETRY_FLUSH_INTERVAL=30000
SYSTEM_METRICS_INTERVAL=300000

# Sentry Error Tracking
SENTRY_DSN={{SENTRY_DSN}}
SENTRY_ENVIRONMENT=development
SENTRY_SAMPLE_RATE=1.0
SENTRY_TRACES_SAMPLE_RATE=0.1

# Azure Application Insights
APPINSIGHTS_INSTRUMENTATIONKEY={{APPINSIGHTS_INSTRUMENTATIONKEY}}
APPLICATIONINSIGHTS_CONNECTION_STRING={{APPLICATIONINSIGHTS_CONNECTION_STRING}}
APPINSIGHTS_ENDPOINT=https://dc.services.visualstudio.com/v2/track
APPINSIGHTS_SAMPLING_PERCENTAGE=100

# Google Analytics (for user behavior analytics)
GA_MEASUREMENT_ID=G-G424CV5GGT
GA_API_SECRET={{GA_API_SECRET}}
GA_TRACKING_ID=G-G424CV5GGT

# Custom Telemetry Endpoints
TELEMETRY_ENDPOINT={{TELEMETRY_ENDPOINT}}
TELEMETRY_API_KEY={{TELEMETRY_API_KEY}}
TELEMETRY_ENDPOINT_BACKUP={{TELEMETRY_ENDPOINT_BACKUP}}
TELEMETRY_API_KEY_BACKUP={{TELEMETRY_API_KEY_BACKUP}}

# Analytics-specific Endpoint (separate from error tracking)
ANALYTICS_ENDPOINT={{ANALYTICS_ENDPOINT}}
ANALYTICS_API_KEY={{ANALYTICS_API_KEY}}

# Client and Session Management
TELEMETRY_CLIENT_ID=auto-generated-if-not-set

# ===========================================
# SECURITY CONFIGURATION
# ===========================================

# JWT Secret for authentication
JWT_SECRET={{JWT_SECRET}}
JWT_EXPIRES_IN=7d

# Rate limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:8080,https://rinawarp-terminal.vercel.app

# ===========================================
# EMAIL CONFIGURATION (OPTIONAL)
# ===========================================
# For license notifications and support

# SMTP Configuration
SMTP_HOST={{SMTP_HOST}}
SMTP_PORT={{SMTP_PORT}}
SMTP_SECURE={{SMTP_SECURE}}
SMTP_USER={{SMTP_USER}}
SMTP_PASS={{SMTP_PASS}}

# SendGrid (alternative)
SENDGRID_API_KEY={{SENDGRID_API_KEY}}
SENDGRID_FROM_EMAIL={{SENDGRID_FROM_EMAIL}}

# ===========================================
# DATABASE CONFIGURATION (OPTIONAL)
# ===========================================
# For advanced features like user management

# SQLite (default)
DATABASE_URL={{DATABASE_URL}}

# PostgreSQL (production)
# DATABASE_URL={{DATABASE_URL_POSTGRESQL}}

# MongoDB (alternative)
# MONGODB_URI={{MONGODB_URI}}

# ===========================================
# FEATURE FLAGS
# ===========================================
# Enable/disable features for gradual rollout

ENABLE_AI_FEATURES=true
ENABLE_CLOUD_SYNC=true
ENABLE_ANALYTICS=false
ENABLE_CRASH_REPORTING=true
ENABLE_AUTO_UPDATES=true
ENABLE_TELEMETRY=false

# ===========================================
# DEVELOPMENT SETTINGS
# ===========================================
# Only used in development mode

# Enable debug logging
DEBUG=rinawarp:*

# Hot reload for development
HOT_RELOAD=true

# Skip SSL verification (development only)
NODE_TLS_REJECT_UNAUTHORIZED=0

# Mock external services
MOCK_PAYMENTS=true
MOCK_AI_SERVICES=false

# ===========================================
# PERFORMANCE TUNING
# ===========================================

# Terminal buffer size (lines)
TERMINAL_BUFFER_SIZE=1000

# Command history limit
COMMAND_HISTORY_LIMIT=1000

# Auto-save interval (milliseconds)
AUTO_SAVE_INTERVAL=30000

# Debounce delay for search/filter (milliseconds)
SEARCH_DEBOUNCE_DELAY=300

# ===========================================
# ADVANCED CONFIGURATION
# ===========================================

# Custom plugin directory
PLUGIN_DIRECTORY=./plugins

# Theme directory
THEME_DIRECTORY=./themes

# User data directory
USER_DATA_DIRECTORY=./user-data

# License server URL
LICENSE_SERVER_URL=https://license.rinawarp-terminal-fresh-2024.web.app

# Update server URL
UPDATE_SERVER_URL=https://update.rinawarp-terminal-fresh-2024.web.app

# Pricing and sales URLs
PRICING_URL=https://rinawarp-terminal-fresh-2024.web.app/pricing

# ===========================================
# NOTES
# ===========================================
# 1. Never commit .env files to version control
# 2. Use strong, unique values for all secrets
# 3. Rotate API keys and tokens regularly
# 4. Use environment-specific values (dev/staging/prod)
# 5. Consider using a secret management service for production
# 6. Validate all required variables on startup

