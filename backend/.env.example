# RinaWarp Terminal Backend Environment Configuration

# Application
NODE_ENV=production
PORT=3000
FRONTEND_URL=https://rinawarptech.com
BACKEND_URL=https://api.rinawarptech.com

# Database (MongoDB)
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/rinawarp-terminal

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-here
DOWNLOAD_SECRET=your-download-signing-secret

# Stripe Configuration
STRIPE_SECRET_KEY=sk_live_...
STRIPE_PUBLISHABLE_KEY=pk_live_...
STRIPE_WEBHOOK_SECRET=whsec_...
STRIPE_PROFESSIONAL_PRICE_ID=price_1234567890abcdef
STRIPE_PORTAL_CONFIG_ID=bpc_1234567890abcdef

# Google Analytics
GA_MEASUREMENT_ID=G-XXXXXXXXXX
GA_API_SECRET=your-ga-api-secret

# Mixpanel Analytics
MIXPANEL_TOKEN=your-mixpanel-token

# Team Notifications
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/...
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/...

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=notifications@rinawarptech.com
SMTP_PASS=your-app-password
FROM_EMAIL=RinaWarp Terminal <noreply@rinawarptech.com>

# License Server (for desktop app verification)
LICENSE_SERVER_URL=https://api.rinawarptech.com

# File Storage (for secure downloads)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=rinawarp-releases

# Redis (for session storage and caching)
REDIS_URL=redis://localhost:6379

# Security
CORS_ORIGIN=https://rinawarptech.com,https://www.rinawarptech.com
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
LOG_FILE=logs/app.log
