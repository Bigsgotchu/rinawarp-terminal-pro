{
  "types": {
    "feat": { "section": "Features" },
    "fix": { "section": "Bug Fixes" },
    "chore": { "section": "Maintenance", "hidden": false },
    "docs": { "section": "Documentation", "hidden": false },
    "style": { "section": "Code Style", "hidden": true },
    "refactor": { "section": "Code Refactoring", "hidden": false },
    "perf": { "section": "Performance Improvements", "hidden": false },
    "test": { "section": "Tests", "hidden": false },
    "build": { "section": "Build System", "hidden": false },
    "ci": { "section": "CI/CD", "hidden": false },
    "revert": { "section": "Reverts", "hidden": false }
  },
  "commitUrlFormat": "https://github.com/Bigsgotchu/rinawarp-terminal/commit/{{hash}}",
  "compareUrlFormat": "https://github.com/Bigsgotchu/rinawarp-terminal/compare/{{previousTag}}...{{currentTag}}",
  "issueUrlFormat": "https://github.com/Bigsgotchu/rinawarp-terminal/issues/{{id}}",
  "userUrlFormat": "https://github.com/{{user}}",
  "releaseCommitMessageFormat": "chore(release): {{currentTag}}",
  "issuePrefixes": ["#"],
  "preMajor": false,
  "scripts": {
    "prebump": "npm run test && npm run lint",
    "precommit": "npm run build",
    "prerelease": "npm run build && npm run test"
  },
  "skip": {
    "changelog": false,
    "commit": false,
    "tag": false
  },
  "infile": "CHANGELOG.md",
  "header": "# Changelog\n\nAll notable changes to RinaWarp Terminal will be documented in this file.\n\nThe format is based on [Keep a Changelog](https://keepachangelog.com/en/1.0.0/),\nand this project adheres to [Semantic Versioning](https://semver.org/spec/v2.0.0.html).\n\n",
  "packageFiles": [
    {
      "filename": "package.json",
      "type": "json"
    }
  ],
  "bumpFiles": [
    {
      "filename": "package.json",
      "type": "json"
    }
  ],
  "tagPrefix": "v",
  "releaseAs": false
}
