{
  "name": "rinawarp-terminal",
  "version": "3.0.0",
  "description": "RinaWarp Terminal - AI-Powered Terminal with FREE Groq Integration",
  "main": "main.js",
  "scripts": {
    "start": "electron . --disable-gpu-sandbox --no-sandbox",
    "dev": "electron . --debug --disable-gpu-sandbox --no-sandbox",
    "build": "electron-builder",
    "build:mac": "electron-builder --mac",
    "build:win": "electron-builder --win",
    "build:linux": "electron-builder --linux",
    "build:all": "electron-builder -mwl",
    "dist": "electron-builder --publish=never",
    "publish": "electron-builder --publish=always",
    "release": "npm run dist && npm run publish",
    "postinstall": "electron-builder install-app-deps"
  },
  "keywords": [
    "terminal",
    "ai",
    "groq",
    "coding",
    "developer-tools",
    "rinawarp",
    "free-ai",
    "llama"
  ],
  "author": "RinaWarp Technologies",
  "license": "Commercial",
  "homepage": "https://rinawarptech.com",
  "repository": {
    "type": "git",
    "url": "https://github.com/rinawarp/rinawarp-terminal.git"
  },
  "devDependencies": {
    "electron": "^26.0.0",
    "electron-builder": "^24.6.3"
  },
  "dependencies": {
    "@sentry/electron": "^6.10.0",
    "@sentry/node": "^10.5.0",
    "dotenv": "^17.2.1",
    "electron-updater": "^6.6.2",
    "xterm": "^5.3.0",
    "xterm-addon-fit": "^0.8.0",
    "xterm-addon-search": "^0.13.0",
    "xterm-addon-web-links": "^0.9.0"
  },
  "build": {
    "appId": "com.rinawarp.terminal",
    "productName": "RinaWarp Terminal",
    "directories": {
      "buildResources": "build",
      "output": "dist"
    },
    "publish": {
      "provider": "github",
      "owner": "rinawarp",
      "repo": "rinawarp-terminal"
    },
    "files": [
      "main.js",
      "preload.js", 
      "index.html",
      "groq-setup.html",
      "GROQ_SETUP.md",
      "setup-groq.js",
      "css/**/*",
      "js/**/*", 
      "assets/**/*",
      "ai-core/**/*",
      "config/**/*",
      "sentry-main.js",
      ".env.sentry",
      "package.json"
    ],
    "mac": {
      "category": "public.app-category.developer-tools",
      "icon": "build/icon.icns",
      "target": [
        {
          "target": "dmg",
          "arch": ["x64", "arm64"]
        },
        {
          "target": "zip", 
          "arch": ["x64", "arm64"]
        }
      ]
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64", "ia32"]
        },
        {
          "target": "portable",
          "arch": ["x64", "ia32"]
        }
      ],
      "icon": "build/icon.ico"
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": ["x64"]
        },
        {
          "target": "deb",
          "arch": ["x64"]
        }
      ],
      "icon": "build/icon.png",
      "category": "Development"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  }
}
