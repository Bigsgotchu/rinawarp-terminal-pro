{
  "version": 2,
  "public": true,
  "github": {
    "silent": true
  },
  "buildCommand": "npm run build:web",
  "outputDirectory": "public",
  "framework": null,
  "builds": [
    {
      "src": "public/**/*",
      "use": "@vercel/static"
    }
  ],
  "redirects": [
    {
      "source": "https://www.rinawarptech.com/:path*",
      "destination": "https://rinawarptech.com/:path*",
      "permanent": true
    }
  ],
  "rewrites": [
    {
      "source": "/api/(stripe-config|validate-license|create-checkout-session|download|test.*)",
      "destination": "https://rinawarp-terminal-production.up.railway.app/api/$1"
    }
  ],
  "headers": [
    {
      "source": "/api/(.*)",
      "headers": [
        {
          "key": "Access-Control-Allow-Origin",
          "value": "*"
        },
        {
          "key": "Access-Control-Allow-Methods",
          "value": "GET, POST, PUT, DELETE, OPTIONS"
        },
        {
          "key": "Access-Control-Allow-Headers",
          "value": "Content-Type, Authorization"
        }
      ]
    },
    {
      "source": "/:path*",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, s-maxage=60, stale-while-revalidate=120, max-age=0, must-revalidate"
        }
      ]
    },
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "Referrer-Policy",
          "value": "strict-origin-when-cross-origin"
        }
      ]
    }
  ],
  "trailingSlash": false,
  "cleanUrls": true
}
