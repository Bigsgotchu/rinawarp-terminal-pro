name: ğŸ”¥ Firebase Hosting Deploy

on:
  # Deploy only on release tags to save Actions minutes
  push:
    tags:
      - 'v*'  # Deploy on version tags like v1.0.0
  # Manual trigger option
  workflow_dispatch:
    inputs:
      environment:
        description: 'Environment to deploy to'
        required: true
        default: 'production'
        type: choice
        options:
          - production
          - staging

jobs:
  firebase-deploy:
    name: ğŸ”¥ Deploy to Firebase Hosting
    runs-on: ubuntu-latest

    steps:
      - name: ğŸ“¦ Checkout code
        uses: actions/checkout@v4

      - name: âš™ï¸ Install Node.js
        uses: actions/setup-node@v4
        with:
          node-version: 20
          cache: npm

      - name: ğŸ“ Install dependencies
        run: npm ci

      - name: ğŸ› ï¸ Build application
        run: npm run build

      - name: ğŸš€ Deploy to Firebase Hosting
        env:
          FIREBASE_TOKEN: ${{ secrets.FIREBASE_TOKEN }}
        run: |
          npm install -g firebase-tools
          if [ "${{ github.event_name }}" == "workflow_dispatch" ]; then
            echo "ğŸŒŠ Deploying to ${{ github.event.inputs.environment }} environment"
            firebase deploy --only hosting --project rinawarp-terminal
          else
            echo "ğŸŒŠ Deploying production release"
            firebase deploy --only hosting --project rinawarp-terminal
          fi

      - name: âœ¨ Deployment Status
        run: |
          if [ "${{ github.event_name }}" == "workflow_dispatch" ]; then
            echo "ğŸŒŠ RinaWarp deployed to ${{ github.event.inputs.environment }}!"
          else
            echo "ğŸŒŠ RinaWarp is now live on Firebase Hosting!"
          fi
