# Facebook API Configuration for RinaWarp Social Analytics
# Copy this file to .env and fill in your Facebook app credentials

# Facebook App Basic Settings
FACEBOOK_APP_ID=your_facebook_app_id_here
FACEBOOK_APP_SECRET=your_facebook_app_secret_here
FACEBOOK_CLIENT_TOKEN=your_facebook_client_token_here

# Facebook API Configuration
FACEBOOK_API_VERSION=v23.0
FACEBOOK_GRAPH_API_URL=https://graph.facebook.com

# OAuth Redirect URLs (must match Facebook app settings)
FACEBOOK_REDIRECT_URL_PROD=https://rinawarp.com/auth/facebook/callback
FACEBOOK_REDIRECT_URL_DEV=https://localhost:3000/auth/facebook/callback

# Facebook Webhook Configuration
FACEBOOK_WEBHOOK_VERIFY_TOKEN=your_webhook_verify_token_here
FACEBOOK_WEBHOOK_URL=https://api.rinawarp.com/webhooks/facebook

# Data Deletion Callback (required for compliance)
FACEBOOK_DELETION_CALLBACK_URL=https://api.rinawarp.com/api/facebook/deletion

# Facebook Business Information (for verification)
FACEBOOK_BUSINESS_NAME=RinaWarp
FACEBOOK_BUSINESS_EMAIL=contact@rinawarp.com
FACEBOOK_BUSINESS_WEBSITE=https://rinawarp.com

# Privacy and Terms URLs (required for app review)
PRIVACY_POLICY_URL=https://rinawarp.com/privacy
TERMS_OF_SERVICE_URL=https://rinawarp.com/terms

# Facebook App Permissions (for reference)
# These should be requested during OAuth flow:
# - public_profile
# - email
# - pages_read_engagement
# - pages_show_list
# - user_posts
# - user_likes

# Security Settings
FACEBOOK_REQUIRE_APP_SECRET=true
FACEBOOK_REQUIRE_2FA=true

# Rate Limiting
FACEBOOK_API_RATE_LIMIT=200
FACEBOOK_API_RATE_WINDOW=3600

# Development vs Production
NODE_ENV=development
FACEBOOK_DEBUG_MODE=true

# Logging and Monitoring
FACEBOOK_LOG_LEVEL=info
FACEBOOK_ERROR_REPORTING=true

# Data Retention (in days)
FACEBOOK_DATA_RETENTION_DAYS=730

# Notes:
# - Get your Facebook App ID and Secret from: https://developers.facebook.com/apps/
# - Client Token can be found in App Settings > Advanced
# - Webhook Verify Token is a string you create for security
# - Make sure all URLs match exactly what you enter in Facebook Developer Console
# - Privacy Policy and Terms of Service pages are required for app review
# - Keep your App Secret secure and never commit it to version control
