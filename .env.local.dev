# RinaWarp Terminal Local Development Configuration
# This configuration is for local development and testing only

# Developer Mode - Bypasses licensing checks
DEVELOPER_MODE=true
RINAWARP_LICENSE_MODE=dev

# Disable Stripe/Payment requirements for local testing
BYPASS_PAYMENT_CHECKS=true
ENABLE_ALL_FEATURES=true

# Local API endpoints
API_URL=http://localhost:3001
WEBSOCKET_URL=ws://localhost:3001

# Development settings
NODE_ENV=development
DEBUG=true
LOG_LEVEL=debug

# Disable telemetry for local development
DISABLE_TELEMETRY=true
DISABLE_ANALYTICS=true

# Feature flags for testing
ENABLE_AI_FEATURES=true
ENABLE_VOICE_CONTROL=true
ENABLE_ADVANCED_THEMES=true
ENABLE_PLUGIN_SYSTEM=true

# Mock API keys for development (not real keys)
OPENAI_API_KEY=sk-dev-mock-key-for-local-testing
ANTHROPIC_API_KEY=sk-ant-dev-mock-key-for-local-testing
ELEVENLABS_API_KEY=dev-mock-elevenlabs-key

# Terminal settings
DEFAULT_SHELL=/bin/zsh
TERMINAL_FONT_SIZE=14
TERMINAL_THEME=mermaid
