# RinaWarp Production Environment Configuration

# Application
NODE_ENV=production
PORT=3000
APP_NAME=RinaWarp API
APP_VERSION=1.0.0

# Domain & URLs
DOMAIN=rinawarptech.com
API_BASE_URL=https://rinawarptech.com/api
WEBSITE_URL=https://rinawarptech.com

# Stripe (REPLACE WITH YOUR LIVE KEYS)
STRIPE_PUBLISHABLE_KEY=pk_live_YOUR_KEY_HERE
STRIPE_SECRET_KEY=sk_live_YOUR_SECRET_KEY_HERE
STRIPE_WEBHOOK_SECRET=whsec_YOUR_WEBHOOK_SECRET_HERE

# Database (Configure when you add database)
# DATABASE_URL=postgresql://username:password@localhost:5432/rinawarp
# DB_HOST=localhost
# DB_PORT=5432
# DB_NAME=rinawarp
# DB_USER=rinawarp_user
# DB_PASS=secure_password

# Redis (for sessions and caching)
# REDIS_URL=redis://localhost:6379
# REDIS_HOST=localhost
# REDIS_PORT=6379

# JWT & Security
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
ENCRYPTION_KEY=your-32-character-encryption-key-here
SESSION_SECRET=your-session-secret-key

# Email/SMTP (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=noreply@rinawarptech.com
SMTP_PASS=your_email_password
FROM_EMAIL=noreply@rinawarptech.com
FROM_NAME=RinaWarp Terminal

# AI Providers (optional - for enhanced AI features)
OPENAI_API_KEY=your_openai_key_here
ANTHROPIC_API_KEY=your_anthropic_key_here
GROQ_API_KEY=your_groq_key_here

# Monitoring & Analytics
# SENTRY_DSN=your_sentry_dsn_here
# GOOGLE_ANALYTICS_ID=G-SZK23HMCVP  # Now managed through GTM
GOOGLE_TAG_MANAGER_ID=GTM-5LDNPV8Z

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File Upload Limits
MAX_FILE_SIZE=10485760
UPLOAD_PATH=/tmp/uploads

# Logging
LOG_LEVEL=info
LOG_FILE=/var/log/rinawarp/app.log

# License Management
LICENSE_VALIDATION_ENDPOINT=https://rinawarptech.com/api/license/validate
DEFAULT_LICENSE_TIER=free
MAX_DEVICES_FREE=1
MAX_DEVICES_PERSONAL=3
MAX_DEVICES_PROFESSIONAL=5

# Feature Flags
ENABLE_VOICE_FEATURES=true
ENABLE_COLLABORATION=true
ENABLE_CLOUD_SYNC=true
ENABLE_ANALYTICS=true
ENABLE_BETA_FEATURES=false

# API Limits
API_REQUESTS_PER_HOUR=1000
AI_REQUESTS_PER_DAY=100
VOICE_REQUESTS_PER_DAY=50

# Backup & Storage
# BACKUP_S3_BUCKET=rinawarp-backups
# AWS_ACCESS_KEY_ID=your_aws_key
# AWS_SECRET_ACCESS_KEY=your_aws_secret
# AWS_REGION=us-east-1
